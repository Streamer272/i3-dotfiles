bindsym $mod+r mode "resize"

mode "resize" {
        bindsym h resize shrink width $resize_width px or $resize_width ppt
        bindsym j resize shrink height $resize_width px or $resize_width ppt
        bindsym k resize grow height $resize_width px or $resize_width ppt
        bindsym l resize grow width $resize_width px or $resize_width ppt

	    bindsym Left resize shrink width $resize_width px or $resize_width ppt
        bindsym Down resize shrink height $resize_width px or $resize_width ppt
        bindsym Up resize grow height $resize_width px or $resize_width ppt
        bindsym Right resize grow width $resize_width px or $resize_width ppt

	    bindsym Return mode "default"
        bindsym Escape mode "default"
}

######################################
# keybindings for different actions: #
